<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.FormsMessages"/>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{wp.style.formGroup} {wp.style.formGroupNarrow}">
            <g:Label addStyleNames="{wp.style.formLabel}" text="{msg.formPurpose}"/>
            <g:RadioButton ui:field="entityEditingPurposeRadio" value="true" name="purpose" text="Entity editing"/>
            <g:RadioButton ui:field="entityCreationPurposeRadio" name="purpose" text="Entity creation"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label text="{msg.activationCriteria}" addStyleNames="{wp.style.formLabel}"/>
            <g:SimplePanel ui:field="container"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
